<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <springProperty name="application.name" source="spring.application.name" defaultValue="my-app"/>
    <springProperty name="application.environment" source="spring.profiles.active" defaultValue="default"/>
    <springProperty name="hostname" source="HOSTNAME" defaultValue="localhost"/>
    <springProperty name="logging.level.root" source="logging.level.root" defaultValue="INFO" />
    <springProperty name="logging.pattern" source="logging.pattern"
                    defaultValue="%clr(%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}){faint} %clr(%5p){highlight} %clr(${PID:- }){magenta} --- [%clr(${spring.application.name:-}){blue},%X{traceId:-},%X{spanId:-},%X{requestId:-},%X{correlationId:-}] [%clr(%t){faint}] %clr(%-40.40logger{39}){cyan} : %clr(%msg){faint}%n"/>

    <springProperty name="logging.async.queueSize" source="logging.async.queueSize" defaultValue="10000"/>
    <springProperty name="logging.async.discardingThreshold" source="logging.async.discardingThreshold" defaultValue="0"/>
    <springProperty name="logging.async.maxFlushTime" source="logging.async.maxFlushTime" defaultValue="1000"/>
    <springProperty name="logging.async.includeCallerData" source="logging.async.includeCallerData" defaultValue="false"/>

    <logger name="org.apache" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.validator" level="WARN"/>
    <logger name="org.postgresql" level="WARN"/>
    <logger name="org.redisson" level="WARN"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.cache" level="WARN"/>
    <logger name="org.springframework.ai" level="WARN"/>
    <logger name="liquibase" level="WARN"/>
    <logger name="io.github.resilience4j" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="com.netflix" level="WARN"/>
    <logger name="com.netflix.discovery" level="WARN"/>
    <logger name="io.swagger.v3" level="WARN"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${logging.pattern}</pattern>
        </encoder>
    </appender>

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app=${application.name},host=${hostname},env=${application.environment}</pattern>
            </label>
            <message class="com.github.loki4j.logback.JsonLayout">
                <jsonPattern>
                    {
                    "timestamp": "%date{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}",
                    "level": "%-5level",
                    "thread": "%.10thread",
                    "logger": "%logger{20}",
                    "message": "%msg",
                    "exception": "%ex",
                    "context": {
                    "application": "${application.name:-my-app}",
                    "environment": "${application.environment:-default}",
                    "host": "${hostname:-localhost}",
                    "traceId": "%X{traceId:-}",
                    "spanId": "%X{spanId:-}",
                    "requestId": "%X{requestId:-}",
                    "correlationId": "%X{correlationId:-}"
                    }
                    }
                </jsonPattern>
                <prettyPrint>true</prettyPrint>
            </message>
        </format>
    </appender>

    <appender name="ASYNC_LOKI" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${logging.async.queueSize}</queueSize>
        <discardingThreshold>${logging.async.discardingThreshold}</discardingThreshold>
        <maxFlushTime>${logging.async.maxFlushTime}</maxFlushTime>
        <includeCallerData>${logging.async.includeCallerData}</includeCallerData>
        <appender-ref ref="LOKI"/>
    </appender>

    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${logging.async.queueSize}</queueSize>
        <discardingThreshold>${logging.async.discardingThreshold}</discardingThreshold>
        <maxFlushTime>${logging.async.maxFlushTime}</maxFlushTime>
        <includeCallerData>${logging.async.includeCallerData}</includeCallerData>
        <appender-ref ref="CONSOLE"/>
    </appender>

    <root level="${logging.level.root}">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </root>
</configuration>